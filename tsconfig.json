{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["css/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@redux/*": ["redux/*"],
      "@actions/*": ["redux/actions/*"],
      "@reducers/*": ["redux/reducers/*"],
      "@selectors/*": ["redux/selectors/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@customTypes/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "src"
  ]
}
